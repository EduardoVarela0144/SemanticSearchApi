    "/articles/post_articles_in_folder/{path_carpeta}": {
      "post": {
        "tags": [
          "Article"
        ],
        "summary": "Add articles to the database",
        "description": "Articles MUST be in a TXT file inside the selected folder, they'll be formatted into JSON and storaged in the database.",
        "parameters": [
          {
            "name": "path_carpeta",
            "in": "path",
            "description": "Articles folder",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "operationId": "addArticleFromFolder",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/articles": {
      "post": {
        "tags": [
          "Article"
        ],
        "summary": "Create new article",
        "operationId": "addArticle",
        "requestBody": {
          "description": "Create new article",
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Article"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/articles/{article_id}": {
