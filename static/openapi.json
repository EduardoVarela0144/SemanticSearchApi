          "journal",
          "issn",
          "doi",
          "pmc_id",
          "keys",
          "abstract",
          "objectives",
          "methods",
          "content",
          "results",
          "conclusion",
          "file",
          "path"
        ],
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "authors": {
            "type": "string"
          },
          "journal": {
            "type": "string"
          },
          "issn": {
            "type": "string"
          },
          "doi": {
