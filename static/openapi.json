          {
            "name": "article_id",
            "in": "path",
            "required": true,
            "description": "Article Id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    }
  },
  "components": {
