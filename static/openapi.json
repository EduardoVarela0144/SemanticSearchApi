  "paths": {
    "/articles/get_all_articles": {
      "get": {
        "tags": [
          "Article"
        ],
        "summary": "List all articles",
        "description": "Returns all articles",
        "operationId": "getArticles",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/articles/articles_semantic_search": {
      "get": {
        "tags": [
          "Article"
        ],
        "summary": "Article semantic search",
        "description": "A semantic search is performed on the articles",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Semantic search query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "top_k",
            "in": "query",
            "description": "K (K neighbors)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "candidates",
            "in": "query",
            "description": "Candidates",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "operationId": "getArticlesSemantic",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/articles/triplets_semantic_search": {
      "get": {
        "tags": [
          "Article"
        ],
        "summary": "Triplets semantic search",
        "description": "A semantic search is performed on the articles triplets",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Semantic search query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "top_k",
            "in": "query",
            "description": "K (K neighbors)",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "candidates",
            "in": "query",
            "description": "Candidates",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "operationId": "triplets_semantic_search",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/articles/analyze_articles": {
      "get": {
        "tags": [
          "Article"
        ],
        "summary": "Triplets extraction",
        "description": "Triplets extraction from a single article. The article MUST already be on the database.",
        "parameters": [
          {
            "name": "keys",
            "in": "query",
            "description": "Article keywords",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "issn",
            "in": "query",
            "description": "Article Issn",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "title",
            "in": "query",
            "description": "Article title",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pmc_id",
            "in": "query",
            "description": "PMC_ID",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "threads",
            "in": "query",
            "description": "CoreNlp threads",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 4
            }
          },
          {
            "name": "memory",
            "in": "query",
            "description": "CoreNlp memory",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 16
            }
          }
        ],
        "operationId": "analyze_article",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/articles/analyze_all_articles": {
      "get": {
        "tags": [
          "Article"
        ],
        "summary": "Bulk triplets extraction",
        "description": "Triplets extraction from all the articles",
        "parameters": [
          {
            "name": "threads",
            "in": "query",
            "description": "CoreNlp threads",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 4
            }
          },
          {
            "name": "memory",
            "in": "query",
            "description": "CoreNlp memory",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 16
            }
          }
        ],
        "operationId": "analyze_all_articles",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
