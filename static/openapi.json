                  "authors": {
                    "type": "string"
                  },
                  "journal": {
                    "type": "string"
                  },
                  "issn": {
                    "type": "string"
                  },
                  "doi": {
                    "type": "string"
                  },
                  "pmc_id": {
                    "type": "string"
                  },
                  "keys": {
                    "type": "string"
                  },
                  "abstract": {
                    "type": "string"
                  },
                  "objectives": {
                    "type": "string"
                  },
                  "methods": {
                    "type": "string"
                  },
                  "results": {
                    "type": "string"
                  },
                  "conclusion": {
                    "type": "string"
                  }
                }
              }
            }
